<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mine.activity.NewUserActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/titlebackground">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/mine_leftarrow"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp">
            <!--<com.makeramen.roundedimageview.RoundedImageView-->
                <!--android:id="@+id/rv_new_photo"-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="80dp"-->
                <!--android:src="@drawable/welcome" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎注册"
                android:textSize="30sp"
                android:textColor="#36b5ea"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20sp"
            android:gravity="center_horizontal">
            <EditText
                android:id="@+id/et_new_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:inputType="number"
                android:hint="请输入您的手机号码"
                android:paddingLeft="10dp"
                android:background="@drawable/mine_btn_style_2"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="159dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_centerVertical="true">
                <EditText
                    android:id="@+id/et_new_msgcode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="请输入短信验证码"
                    android:paddingLeft="10dp"
                    android:background="@drawable/mine_btn_style_2" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_get_msgcode"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="获取验证码"
                android:background="@drawable/mine_btn_style_3"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginRight="32dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal">
            <EditText
                android:id="@+id/et_new_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:hint="请输入您的昵称"
                android:paddingLeft="10dp"
                android:background="@drawable/mine_btn_style_2"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="159dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">
            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="请输入您的密码"
                android:paddingLeft="10dp"
                android:background="@drawable/mine_btn_style_2"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="159dp" />
        </LinearLayout>
        >

        <Button
            android:id="@+id/btn_new_user"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="立即注册"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/mine_btn_style_1"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="359dp" />

    </LinearLayout>

</ScrollView>