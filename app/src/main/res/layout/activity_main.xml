<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical"

              tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_bottom_parent_bg"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">

        <RadioButton
            android:id="@+id/rb_recommend"
            style="@style/MainButtonStyle"
            android:paddingTop="10dp"
            android:text="推荐"

            android:drawableTop="@drawable/home_button_selector"
           />
        <!--android:text="推荐"-->
        <RadioButton
            android:id="@+id/rb_record"
            style="@style/MainButtonStyle"
            android:paddingTop="10dp"
            android:text="视频"
            android:drawableTop="@drawable/cart_button_selector"

            />

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivLuzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/luzhi"
                app:riv_border_color="#5500ff00"
                app:riv_border_width="5dp"
                app:riv_oval="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivLuzhi"
                android:layout_centerHorizontal="true"
                android:text="录制"
                android:textSize="12dp"/>
        </RelativeLayout>

        <RadioButton
            android:id="@+id/rb_team"
            style="@style/MainButtonStyle"
            android:paddingTop="10dp"
            android:text="团队"
            android:drawableTop="@drawable/type_button_selector"
            />


        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/MainButtonStyle"
            android:paddingTop="10dp"
            android:text="团队"
            android:drawableTop="@drawable/user_button_selector"
            />
    </RadioGroup>

</LinearLayout>
